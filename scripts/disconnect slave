hudson.slaves.OfflineCause.ByCLI c = new hudson.slaves.OfflineCause.ByCLI("coz I can")
  
for (aSlave in hudson.model.Hudson.instance.slaves) {
  if (aSlave.name.equals(slave_name )){
        println "disconnecting: " + aSlave.name;
        aSlave.getComputer().setTemporarilyOffline(true, c);
  }
  
}